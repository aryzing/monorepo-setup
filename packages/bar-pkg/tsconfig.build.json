{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "dist/types",
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx",
    "**/*spec.ts",
    "**/*spec.tsx",
    "**/*test.ts",
    "**/*test.tsx",
  ]
}